<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAkureyOrange</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="titleStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    ​
    <style name="dateLabelStyle" parent="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_left_right</item>
        <item name="android:layout_marginEnd">@dimen/padding_left_right</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">16sp</item>
    </style>
    ​
    <style name="editableDateStyle" parent="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_left_right</item>
        <item name="android:layout_marginEnd">@dimen/padding_left_right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#E6E6E6</item>
        <item name="android:padding">@dimen/extra_small_padding</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
